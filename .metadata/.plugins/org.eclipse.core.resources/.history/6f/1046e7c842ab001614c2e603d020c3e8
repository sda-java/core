package com.test;

import java.io.IOException;

import javax.ejb.EJB;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import myEjb.TestRemote;

@WebServlet(name = "MyEjbServlet", urlPatterns = "/MyEjbServlet")
public class MyEjbServlet extends HttpServlet {

	@EJB // (beanName = "TestRemoteImpl")
	private TestRemote testRemoteImpl;

	// @EJB(beanName = "myEjb1")
	// private TestRemote testRemote2;

	@Override
	protected void doGet(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {

		resp.getWriter().append(testRemoteImpl.say("xxaaaaa"));
		// resp.getWriter().append(testRemote.say("xxaaaaa"));
		resp.getWriter().append("\n");
		// resp.getWriter().append(testRemote2.say("xxaaaaa"));
		resp.getWriter().flush();
	}
}
